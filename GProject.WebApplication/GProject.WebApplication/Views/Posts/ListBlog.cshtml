                        </div>
                        <div class="col-xl-10 col-lg-9 mb-0 text-lg-end text-center">
                            <span class="font-sm color-gray-900 font-medium border-1-right span">Trang thứ: @CurrentPage</span>
                            <div class="d-inline-block"><a class="view-type-grid mr-5 active"></a><a class="view-type-list"></a></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row mt-30">
            <div class="col-lg-9">
                <div class="row">
                    @if (dataTinHot != null)
                    {
                        foreach (var item1 in dataTinHot)
                        {
                            string url = $"/tin-tuc/{item1.Id}.html";
                            <div class="col-lg-12 mb-50 display-list">
                                <div class="card-grid-style-1">

                                    <div class="image-box" style="margin-right: -60px;"><a href="@url"><img src="~/images/news/@item1.Thumb" style="height: 350px;width: 350px;" alt="Ecom"></a></div>
                                    <div class="blog-info">
                                        <a class="tag-dot font-xs">Tin nổi bật</a><a class="color-gray-1100">
                                            <a href="@url" class="color-gray-1100"><h4 class="mb-15">@item1.Title</h4></a>
                                        </a>
                                        <p class="font-md color-gray-500">@item1.Scontents</p>
                                        <div class="row mt-20">
                                            <div class="col-8"><span class="color-gray-500 font-sm mr-30">@item1.UpdatedDate?.ToString("dd/MM/yyyy")</span><span class="color-gray-500 font-sm"><span>Lượt xem: @item1.Views</span></span></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    @if (Model != null && Model.Count() > 0)
                    {
                        foreach (var item in Model)
                        {
                            string _url = $"/tin-tuc/{item.Id}.html";
                            string categoryName = string.Empty;
                            if (item.CategoryId.HasValue)
                            {
                                var category = dataCats.FirstOrDefault(c => c.Id == item.CategoryId);
                                if (category != null)
                                {
                                    categoryName = category.Name;
                                }
                            }
                            <div class="col-lg-4 col-md-6 col-sm-6 col-12 mb-40">
                                <div class="card-grid-style-1">
                                    <div class="image-box">
                                        <a href="@_url"></a><img src="~/images/news/@item.Thumb" style="height: 195px;width: 265px;" href="@_url" alt="Ecom">
                                    </div>
                                    <a class="tag-dot font-xs">@categoryName</a>
                                    <a class="color-gray-1100" href="@_url">
                                        <h4 class="mb-10">@item.Title</h4>
                                    </a>
                                    <p class="font-xs color-gray-500">@item.Scontents</p>
                                    <div class="row mt-20">
                                        <div class="col-8"><span class="color-gray-500 font-xs mr-30">@item.UpdatedDate?.ToString("dd/MM/yyyy")</span><span class="color-gray-500 font-xs"><span>Lượt xem: @item.Views</span></span></div>
                                        <div class="col-4 text-end"><a class="btn btn-gray font-xs font-medium" href="@_url">Read more</a></div>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>
                <nav>
                    <ul class="pagination justify-content-end">
                        @if (Model.HasPreviousPage)
                        {
                            <li class="page-item">
                                <a class="page-link page-prev" href="@Url.Action("ListBlog", new { page = Model.PageNumber - 1 })"></a>
                            </li>
                        }
                        @for (int i = 1; i <= Model.PageCount; i++)
                        {
                            <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                                <a class="page-link" href="@Url.Action("ListBlog", new { page = i })">@i</a>
                            </li>
                        }
                        @if (Model.HasNextPage)
                        {
                            <li class="page-item">
                                <a class="page-link page-next" href="@Url.Action("ListBlog", new { page = Model.PageNumber + 1 })"></a>
                            </li>
                        }
                    </ul>

                </nav>
