    Layout = "~/Views/Shared/_Layout.cshtml";
    List<GProject.Data.DomainClass.Posts> dataTinHot = ViewBag.DataTinHot;
    List<GProject.Data.DomainClass.Category> dataCats = ViewBag.CatName;
}


<div class="section-box">
    <div class="breadcrumbs-div">
        <div class="container">
            <ul class="breadcrumb">
                <li><a class="font-xs color-gray-1000" href="/">Trang Chủ</a></li>
                <li><a class="font-xs color-gray-500">Tin Tức</a></li>
            </ul>
        </div>
    </div>
</div>
